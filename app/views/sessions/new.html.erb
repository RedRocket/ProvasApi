<div id="login-page" class="row">
  <div class="col s10 m6 l3 force-center z-depth-4 card-panel sessions-form  blue lighten-2">
    <%= form_tag({controller: "sessions", action: "create"}, id:"form_login", method: "post") do %>
      <div class="row">
        <div class="input-field col s12 center">
          <p class="center login-form-text white-text">Sua Prova - Administração</p>
        </div>
      </div>
      <div class="row margin">
        <div class="input-field col s12">
          <label for="username" class="center-align">E-mail</label>
          <%= text_field_tag :email, params[:email], class:"white-text" %>
        </div>
      </div>
      <div class="row margin">
        <div class="input-field col s12">
          <%= password_field_tag :password, params[:password], class:"white-text" %>
          <label for="password">Senha</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <button class="btn waves-effect waves-light white-text btn-flat col s12 z-depth-0" type="submit" name="action">Entrar</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
