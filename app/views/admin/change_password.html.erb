<%= render 'layouts/admin_menu' %>
<div id="main">
  <div class="wrapper">
    <section id="content">
      <div id="breadcrumbs-wrapper">
        <div class="container">
          <div class="row">
            <div class="col s12 m12 l12">
              <h5 class="breadcrumbs-title">Perfil e Configuração</h5>
              <br>
            </div>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="section">
          <div class="row">
            <div class="col s12 m8 offset-m2">
              <%= form_for(@admin, url: "/admin/admin/update_password") do |f| %>
                <div class="card-panel white">
                  <span class="black-text">
                    <div class="row">
                      <div class="input-field col s6">
                        <%= f.text_field :email %>
                        <label for="email">Email</label>
                      </div>
                      <div class="input-field col s6">
                        <%= f.text_field :password %>
                        <label for="password">Senha</label>
                      </div>
                    </div>
                  </span>
                </div>
                <a href="javascript:history.back()" class="btn waves-effect waves-light left">Voltar</a>
                <button class="btn waves-effect waves-light right" type="submit" name="action">Salvar
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
