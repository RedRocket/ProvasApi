<%= render 'layouts/admin_menu' %>
<div id="main">
  <div class="wrapper">
    <section id="content">
      <div id="breadcrumbs-wrapper">
        <div class="container">
          <div class="row">
            <div class="col s12 m12 l12" style="position: relative;">
              <h5 class="breadcrumbs-title">Provas</h5>
              <br>

              <div class="breadcrumbs-buttons">
                <a class="btn-floating btn-large blue darken-1 waves-effect waves-light" onclick="window.location.assign('/exams/new')">
                  <i class="force-total-center large-icon material-icons ion-android-add"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="section">
          <div class="row">
            <div class="col s12 m12 l10 offset-l1">
              <ul class="collection with-header" style="border: none">
                <li class="collection-header blue">
                  <div class="row valign-wrapper">

                  </div>
                </li>
                <li class="collection-item center">
                  <div class="row">
                    <div class="col s12 m12 l12">
                      <table id="data-table-simple" class="responsive-table display" cellspacing="0">
                        <thead>
                          <tr>
                            <th class="center">ID</th>
                            <th class="center">Prova</th>
                            <th class="center">Disciplina</th>
                            <th class="center">Ano</th>
                            <th class="center">Visualizações</th>
                            <th class="center">Visivel</th>
                            <th class="center"></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% @exams.each do |exam|%>
                            <tr>
                              <th class="center"><%= exam.id %></th>
                              <th class="center"><%= exam.name %></th>
                              <th class="center"><%= exam.subject.try(:name) %></th>
                              <th class="center"><%= exam.period %></th>
                              <th class="center"><%= exam.views %></th>
                              <th class="center"><%= exam.visible %></th>
                              <th class="center">
                                <% if exam.visible %>
                                  <%= link_to "Tornar Invisivel", edit_exam_path(id: exam.id), method: :patch %>
                                <% else %>
                                  <%= link_to "Tornar Visivel", edit_exam_path(id: exam.id), method: :patch %>
                                <% end %>
                                | <%= link_to "Editar", edit_exam_path(id: exam.id), method: :get %></th>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
